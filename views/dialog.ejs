<script src="./javascripts/sidePanel_controller.js"></script>
<script src="./javascripts/dialogs_controller.js"></script>
<script src="./javascripts/rightTree_controller.js"></script>

<div>
    <script type="text/ng-template" id="addNewItemDialog.html">
        <div class="modal-header">
            <h3 class="modal-title">Add New Item</h3>
        </div>
        <div class="modal-body">
            <input type='text' class='itemName' ng-model='objectName' name='objectName' autofocus ng-maxlength="45">
            <select class='type'>
                <option  id='0'>Folder</option>
                <option id='1'>Item</option>
            </select>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-disabled="objectName.length == 0" ng-click="ok()">OK</button>
            <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>

<div>
    <script type="text/ng-template" id="deleteDialog.html">
        <div class="modal-header">
            <h3 class="modal-title">Remove Item:{{selectedName}}</h3>
        </div>
        <div class="modal-body" ng-model="selectedName">
            <p>Are you sure you want to delete <span class='notice'>{{selectedName}}</span>?, this object cannot be recovered.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-click="remove()">Remove</button>
            <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>

<div>
    <script type="text/ng-template" id="editDialog.html">
        <div class="modal-header">
            <h3 class="modal-title">Edit Item :{{selectedName}}</h3>
        </div>
        <div class="modal-body">
            <input type='text' class='editName_box' name='editName' ng-model="selectedName" autofocus/>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" ng-disabled="selectedName.length == 0" ng-click="edit()">Edit</button>
            <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>